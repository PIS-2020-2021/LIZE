<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workers.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/layout_bg">

    <TextView
        android:id="@+id/move_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Selecciona el Ãmbito de destino:"
        android:textAppearance="@style/TextAppearance.Lize.Body1"
        android:layout_gravity="center"/>

    <include layout="@layout/item_move"
        android:id="@+id/move_ambito_selected"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/move_note_ambitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"/>

</LinearLayout>